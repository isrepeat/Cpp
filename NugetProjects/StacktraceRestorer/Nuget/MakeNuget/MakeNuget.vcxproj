  <Target Name="AfterBuild">
    <ItemGroup>
      <NugetLibs Include="$(ProjectDir)\..\!VS_TMP\build\**\*.lib" />
      <NugetDlls Include="$(ProjectDir)\..\!VS_TMP\build\**\*.dll" />
      <NugetIncludes Include="$(ProjectDir)\..\StacktraceRestorer\StacktraceRestorer.h" />
      <NugetTargets Include="$(ProjectDir)\StacktraceRestorer.targets" />
      <Nuspec Include="$(ProjectDir)\StacktraceRestorer.nuspec" />
    </ItemGroup>
    <Message Importance="High" Text="==== [StacktraceRestorer nuget] Copy libs  ..." />
    <Copy SourceFiles="@(NugetLibs)" DestinationFolder="$(ProjectDir)\Nuget\lib\%(RecursiveDir)" SkipUnchangedFiles="true" />
    <Message Importance="High" Text="==== [StacktraceRestorer nuget] Copy dlls  ..." />
    <Copy SourceFiles="@(NugetDlls)" DestinationFolder="$(ProjectDir)\Nuget\lib\%(RecursiveDir)" SkipUnchangedFiles="true" />
    <Message Importance="High" Text="==== [StacktraceRestorer nuget] Copy includes ..." />
    <Copy SourceFiles="@(NugetIncludes)" DestinationFolder="$(ProjectDir)\Nuget\build\native\include\StacktraceRestorer\" SkipUnchangedFiles="true" />

    <Message Importance="High" Text="==== [StacktraceRestorer nuget] Copy targets and nuspec ..." />
    <Copy SourceFiles="@(NugetTargets)" DestinationFolder="$(ProjectDir)\Nuget\build\native\" SkipUnchangedFiles="true" />
    <Copy SourceFiles="@(Nuspec)" DestinationFolder="$(ProjectDir)\Nuget\" SkipUnchangedFiles="true" />
    
    <Exec Command="$(ProjectDir)\nuget pack Nuget\StacktraceRestorer.nuspec -OutputDirectory &quot;Output&quot;" />
  </Target>
