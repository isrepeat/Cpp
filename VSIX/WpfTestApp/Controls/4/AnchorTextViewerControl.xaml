<helpers:BaseUserControl x:Class="WpfTestApp.Controls.AnchorTextViewerControl"
                         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                         xmlns:local="clr-namespace:WpfTestApp"
                         xmlns:localEnums="clr-namespace:WpfTestApp.__Local.Enums"
                         xmlns:helpers="clr-namespace:Helpers"
                         x:Name="__AnchorTextViewer"
                         >
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/WpfTestApp;component/Styles/BrushResources.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    
    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Auto"
                      >
            <ItemsControl x:Name="TextItemsControl"
                          ItemsSource="{Binding Lines}"
                          >
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border>
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsHighlighted}" Value="True">
                                            <Setter Property="Background" Value="#007ACC"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="40"/>
                                    <!-- ширина номера -->
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Номер строки -->
                                <TextBlock Text="{Binding LineNumber}"
                                           FontFamily="Consolas"
                                           FontSize="13"
                                           Foreground="Gray"
                                           Margin="5,0,5,0"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Right"
                                           />

                                <!-- Текст строки -->
                                <TextBlock Grid.Column="1"
                                           Text="{Binding Text}"
                                           FontFamily="Consolas"
                                           FontSize="13"
                                           Foreground="White"
                                           Margin="5,3"
                                           TextWrapping="NoWrap"
                                           />
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>


    </Grid>
</helpers:BaseUserControl>
