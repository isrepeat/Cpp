                               xmlns:local="clr-namespace:WpfTestApp"
                               xmlns:localHelpers="clr-namespace:Helpers"
                               xmlns:localControls="clr-namespace:WpfTestApp.Controls"
                               x:Name="__MainContainerControl"
                               >
