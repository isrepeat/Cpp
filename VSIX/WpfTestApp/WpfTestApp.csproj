		<UseWPF>true</UseWPF>
	</PropertyGroup>

	<Import Project="..\HelpersCs\HelpersCs.projitems" Label="Shared" />

	<!-- Custom targets -->
	<Import Project="$(MSBuildThisFileDirectory)\WpfTestApp.targets" />
